                <LinearLayout style="@style/list_view_layout">

                    <ImageView style="@style/default_imgView_songs" />

                    <TextView style="@style/default_txtView_songs" />

                </LinearLayout>

                <LinearLayout style="@style/list_view_layout">

                    <ImageView style="@style/default_imgView_songs" />

                    <TextView style="@style/default_txtView_songs" />

                </LinearLayout>

                <LinearLayout style="@style/list_view_layout">

                    <ImageView style="@style/default_imgView_songs" />

                    <TextView style="@style/default_txtView_songs" />

                </LinearLayout>

                <LinearLayout style="@style/list_view_layout">

                    <ImageView style="@style/default_imgView_songs" />

                    <TextView style="@style/default_txtView_songs" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/nowPlayingView"
            style="@style/nowPlaying_btn_layout">

            <ImageView style="@style/nowPlayingbtn_ImgView" />

            <TextView
                style="@style/default_txtView"
                android:text="@string/now_playing" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
